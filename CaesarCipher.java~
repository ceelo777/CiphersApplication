public class CaesarCipher {
    private String plaintext;
    private String ciphertext;
    private int shift;
    
    public CaesarCipher(String plaintext, int shift) {
	this.plaintext = plaintext;
	this.ciphertext = "";
	this.shift = shift%26;
	for (int i = 0; i < plaintext.length(); i++) {
	    int character = (int)(plaintext.charAt(i));
	    int startIndex = (int)('A');
	    int endIndex = (int)('Z');
	    if (character >= (int)('a') && character <= (int)('z')) {
		startIndex = (int)('a');
		endIndex = (int)('z');
	    }
	    this.ciphertext += (char)( (character+this.shift-startIndex) % 26 + startIndex);
	}
    }
    public int shiftNumber() {
	return this.shift;
    }

    public String getPlaintext() {
	return this.plaintext;
    }

    public String getCiphertext() {
	return this.ciphertext;
    }
}

